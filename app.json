{
  "expo": {
    "name": "quiz-app",
    "slug": "quiz-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "quizapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
            "fonts": [
              {
                "fontFamily": "Merriweather",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Merriweather-LightIt.ttf",
                    "weight": 300,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Merriweather Light.ttf",
                    "weight": 300
                  },
                  {
                    "path": "./assets/fonts/Merriweather-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/Merriweather-Italic.ttf",
                    "weight": 400,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Merriweather-Bold.ttf",
                    "weight": 700,
                  },
                  {
                    "path": "./assets/fonts/Merriweather-BoldIt.ttf",
                    "weight": 700,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Merriweather UltraBold.ttf",
                    "weight": 800,
                  },
                  {
                    "path": "./assets/fonts/Merriweather-UltraBdIt.ttf",
                    "weight": 800,
                    "style": "italic"
                  }
                  
                ]
              }
            ]
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
